@model List<EjemoloMVC.Models.Breed>

    <div class="container mt-5">
        <h1 class="text-center mb-4">Lista de Razas de Perros</h1>

        @if (Model.Any())
    {
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Esperanza de vida</th>
                    <th>Criado para</th>
                    <th>Temperamento</th>
                    <th>Imagen</th>
                    <th>Detalles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var breed in Model)
                {
                <tr>
                    <td class="text-capitalize">@breed.Name</td>
                    <td>@breed.LifeSpan</td>
                    <td>@breed.BredFor</td>
                    <td>@breed.Temperament</td>
                    <td>
                        @if (!string.IsNullOrEmpty(breed.Image?.Url))
                        {
                            <img src="@breed.Image.Url" onerror="this.onerror=null;this.src='/images/no-image.png';" class="img-fluid" style="max-width: 100px;" />
                        }
                        else
                        {
                        <span class="text-muted">No disponible</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@breed.Id" class="btn btn-info">
                            Ver Detalles
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

 <!-- Controles de paginación -->
        <nav aria-label="Paginación">
            <ul class="pagination justify-content-center">
                @if (ViewBag.CurrentPage > 1)
                {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage - 1, limit = ViewBag.Limit })">Anterior</a>
                </li>
                }
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { page = i, limit = ViewBag.Limit })">@i</a>
                </li>
                }
                @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action("Index", new { page = ViewBag.CurrentPage + 1, limit = ViewBag.Limit })">Siguiente</a>
                </li>
                }
            </ul>
        </nav>
    }
    else
    {
        <p class="text-center text-muted">No se encontraron razas.</p>
    }
    </div>
