@model EjemoloMVC.Models.Breed

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-capitalize">@Model.Name</h2>
        <a asp-action="Index" class="btn btn-secondary">← Volver al Inicio</a>
    </div>

    <div class="card shadow-sm p-4">
        <div class="row">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.Image?.Url))
                    {
                      <img src="@Model.Image.Url" alt="@Model.Name" class="img-fluid rounded"
                      onerror="this.onerror=null;this.src='/images/no-image.png';" />
                    }
                    else
                    {
                      <p class="text-muted">No hay imagen disponible</p>
                    }
            </div>
            <div class="col-md-8">
                <h4>Información Básica</h4>
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item"><strong>Nombre:</strong> @Model.Name</li>
                    <li class="list-group-item"><strong>Esperanza de vida:</strong> @(string.IsNullOrEmpty(Model.LifeSpan) ? "Desconocida" : Model.LifeSpan)</li>
                    <li class="list-group-item"><strong>Criado para:</strong> @(string.IsNullOrEmpty(Model.BredFor) ? "No especificado" : Model.BredFor)</li>
                    <li class="list-group-item"><strong>Temperamento:</strong> @(string.IsNullOrEmpty(Model.Temperament) ? "No disponible" : Model.Temperament)</li>
                </ul>
            </div>
        </div>
    </div>
</div>